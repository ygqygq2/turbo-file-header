{
  "name": "turbo-file-header",
  "displayName": "Turbo File Header",
  "description": "Sets file header information globally or for a project.",
  "version": "0.0.2",
  "icon": "resources/icons/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ygqygq2/turbo-file-header"
  },
  "publisher": "ygqygq2",
  "__metadata": {
    "id": "ygqygq2.turbo-file-header",
    "publisherDisplayName": "ygqygq2",
    "publisherId": "e0b1421e-635c-639a-85a0-8b271dcb3d11",
    "isPreReleaseVersion": false
  },
  "bugs": {
    "url": "https://github.com/ygqygq2/turbo-file-header/issues",
    "email": "ygqygq2@qq.com"
  },
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "fileheader",
    "copyright",
    "头部注释",
    "文件头注释",
    "项目文件注释",
    "许可证注释"
  ],
  "license": "MIT",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "turboFileHeader.addFileheader",
        "title": "Turbo File Header: Add Fileheader"
      },
      {
        "command": "turboFileHeader.generateTemplateConfig",
        "title": "Turbo File Header: Generate Custom Template Config File"
      },
      {
        "command": "turboFileHeader.batchUpdateFileheader",
        "title": "Turbo File Header: Batch Update File Header(use custom template config file)"
      }
    ],
    "keybindings": [
      {
        "command": "turboFileHeader.addFileheader",
        "key": "ctrl+alt+h",
        "mac": "ctrl+alt+h",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Turbo File Header",
      "properties": {
        "TurboFileHeader.userName": {
          "type": "string",
          "description": "The fixed current user. The default is from your VCS"
        },
        "TurboFileHeader.userEmail": {
          "type": "string",
          "description": "The fixed current user email. the default is from your VCS"
        },
        "TurboFileHeader.companyName": {
          "type": "string",
          "default": "YourCompanyName",
          "description": "Your company name,"
        },
        "TurboFileHeader.dateFormat": {
          "type": "string",
          "default": "YYYY-MM-DD HH:mm:ss",
          "markdownDescription": "The date format, see [Dayjs Document](https://momentjs.com/docs/#/displaying/format)"
        },
        "TurboFileHeader.autoInsertOnCreateFile": {
          "type": "boolean",
          "default": false,
          "description": "Auto insert fileheader when create file"
        },
        "TurboFileHeader.autoUpdateOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Auto update fileheader when save file"
        },
        "TurboFileHeader.disableFields": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string",
            "enum": [
              "birthtime",
              "mtime",
              "authorName",
              "authorEmail",
              "userName",
              "userEmail",
              "companyName",
              "projectName",
              "filePath",
              "dirPath",
              "fileName"
            ]
          },
          "markdownEnumDescriptions": [
            "file create time. will get it from VCS or fallback to filesystem when it is not available",
            "file last modified time. will get it from VCS or fallback to filesystem when it is not available",
            "file author name. if the file is tracked by VCS, it will get the author name from VCS, else it will get it from current user name",
            "file author email. if the file is tracked by VCS, it will get the author email from VCS, else it will get it from current user email",
            "current user name. the default is from your git config. Can be override by #TurboFileHeader.currentUserName#",
            "current user email. the default is from your git config. Can be override by #TurboFileHeader.currentUserEmail#",
            "Company name",
            "project name. the name of current project",
            "the file path. relative to project root. POSIX path separator",
            "the directory path. relative to project root. POSIX path separator",
            "the file name including extension"
          ],
          "markdownDescription": "Disable some fields in default fileheader. This properties can not affect the custom fileheader"
        },
        "TurboFileHeader.updateHeaderForModifiedFilesOnly": {
          "type": "boolean",
          "description": "Only dirty file to support update file header",
          "default": false
        },
        "TurboFileHeader.languages": {
          "type": "array",
          "description": "Custom language to support",
          "items": {
            "type": "object",
            "title": "language item",
            "properties": {
              "id": {
                "type": "string",
                "description": "language id"
              },
              "extensions": {
                "type": "array",
                "description": "language file extensions",
                "items": {
                  "type": "string",
                  "description": "file extension"
                }
              },
              "aliases": {
                "type": "array",
                "description": "language aliases",
                "items": {
                  "type": "string",
                  "description": "language alias"
                }
              },
              "configuration": {
                "type": "object",
                "description": "language configuration",
                "title": "language configuration",
                "properties": {
                  "comments": {
                    "type": "object",
                    "description": "language comments"
                  }
                }
              }
            }
          },
          "default": [
            {
              "id": "astro",
              "extensions": [
                ".astro"
              ],
              "aliases": [
                "astro"
              ],
              "configuration": {
                "comments": {
                  "blockComment": [
                    "<!--",
                    "-->"
                  ]
                }
              }
            }
          ]
        },
        "TurboFileHeader.useJSDocStyle": {
          "type": "boolean",
          "description": "File header user JSDoc style comments for js/ts",
          "default": false
        },
        "TurboFileHeader.multilineComments": {
          "type": "boolean",
          "description": "Whether the multiline comment highlighter should be active",
          "default": true
        },
        "TurboFileHeader.highlightPlainText": {
          "type": "boolean",
          "description": "Whether the plaintext comment highlighter should be active",
          "default": false
        },
        "TurboFileHeader.tags": {
          "type": "array",
          "description": "Tags which are used to color the comments.",
          "items": {
            "type": "object",
            "title": "tag item",
            "properties": {
              "tag": {
                "type": [
                  "string",
                  "array"
                ],
                "description": "Name of tag, case insensitive, could be string or string[]",
                "items": {
                  "type": "string"
                }
              },
              "color": {
                "type": "string",
                "description": "Font color, eg: #FF2D00"
              },
              "strikethrough": {
                "type": "boolean",
                "description": "Enable text strikethrough."
              },
              "underline": {
                "type": "boolean",
                "description": "Enable text underline."
              },
              "backgroundColor": {
                "type": "string",
                "description": "Background color, eg: transparent"
              },
              "bold": {
                "type": "boolean",
                "description": "Set text font style to bold."
              },
              "italic": {
                "type": "boolean",
                "description": "Set text font style to italic."
              }
            }
          },
          "default": [
            {
              "tag": "#",
              "color": "#18b566",
              "strikethrough": false,
              "underline": false,
              "backgroundColor": "transparent",
              "bold": true,
              "italic": false
            },
            {
              "tag": "!",
              "color": "#FF2D00",
              "strikethrough": false,
              "underline": false,
              "backgroundColor": "transparent",
              "bold": false,
              "italic": false
            },
            {
              "tag": "?",
              "color": "#3498DB",
              "strikethrough": false,
              "underline": false,
              "backgroundColor": "transparent",
              "bold": false,
              "italic": false
            },
            {
              "tag": "//",
              "color": "#474747",
              "strikethrough": true,
              "underline": false,
              "backgroundColor": "transparent",
              "bold": false,
              "italic": false
            },
            {
              "tag": [
                "todo",
                "to-do"
              ],
              "color": "#FF8C00",
              "strikethrough": false,
              "underline": false,
              "backgroundColor": "transparent",
              "bold": false,
              "italic": false
            },
            {
              "tag": "*",
              "color": "#98C379",
              "strikethrough": false,
              "underline": false,
              "backgroundColor": "transparent",
              "bold": false,
              "italic": false
            }
          ]
        },
        "TurboFileHeader.tagsLight": {
          "type": "array",
          "description": "Overwrite tags options for light themes",
          "items": {
            "type": "object",
            "title": "tag item",
            "properties": {
              "tag": {
                "type": [
                  "string",
                  "array"
                ],
                "description": "Name of tag, case insensitive, could be string or string[]",
                "items": {
                  "type": "string"
                }
              },
              "color": {
                "type": "string",
                "description": "Font color, eg: #FF2D00"
              },
              "strikethrough": {
                "type": "boolean",
                "description": "Enable text strikethrough."
              },
              "underline": {
                "type": "boolean",
                "description": "Enable text underline."
              },
              "backgroundColor": {
                "type": "string",
                "description": "Background color, eg: transparent"
              },
              "bold": {
                "type": "boolean",
                "description": "Set text font style to bold."
              },
              "italic": {
                "type": "boolean",
                "description": "Set text font style to italic."
              }
            }
          },
          "default": []
        },
        "TurboFileHeader.tagsDark": {
          "type": "array",
          "description": "Overwrite tags options for dark themes",
          "items": {
            "type": "object",
            "title": "tag item",
            "properties": {
              "tag": {
                "type": [
                  "string",
                  "array"
                ],
                "description": "Name of tag, case insensitive, could be string or string[]",
                "items": {
                  "type": "string"
                }
              },
              "color": {
                "type": "string",
                "description": "Font color, eg: #FF2D00"
              },
              "strikethrough": {
                "type": "boolean",
                "description": "Enable text strikethrough."
              },
              "underline": {
                "type": "boolean",
                "description": "Enable text underline."
              },
              "backgroundColor": {
                "type": "string",
                "description": "Background color, eg: transparent"
              },
              "bold": {
                "type": "boolean",
                "description": "Set text font style to bold."
              },
              "italic": {
                "type": "boolean",
                "description": "Set text font style to italic."
              }
            }
          },
          "default": []
        }
      },
      "resources": [
        {
          "uri": "./resources/fileheader.config.yaml",
          "path": "/fileheader.config.yaml"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "rm -rf out && npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "watch": "npm run esbuild --watch",
    "pretest": "npm run compile && npm run lint",
    "compile": "npm run esbuild-base -- --sourcemap",
    "compile-tsc": "tsc -p ./",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "test": "tsc -p ./ && vscode-test",
    "test:suite:mocha": "tsc -p ./ && node out/test/runTests.js",
    "test:suite": "vitest suite --watch=false",
    "test:unit": "vitest unit --watch=false",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint-fix": "eslint --fix src",
    "prepush": "pnpm run lint",
    "postinstall": "simple-git-hooks",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.14.202",
    "@types/lodash-es": "^4.17.12",
    "@types/mocha": "^10.0.6",
    "@types/node": "~20.11.24",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitest/coverage-v8": "^1.3.1",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "esbuild": "^0.20.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unused-imports": "^3.1.0",
    "glob": "^10.3.10",
    "jest-mock-vscode": "^3.0.0",
    "lint-staged": "^15.2.2",
    "mocha": "^10.3.0",
    "simple-git-hooks": "^2.10.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vitest": "^1.3.1",
    "vscode=1.86.0": "link:@types/vscode=1.86.0"
  },
  "dependencies": {
    "dayjs": "^1.11.10",
    "handlebars": "^4.7.8",
    "json5": "^2.2.3",
    "lodash": "^4.17.21",
    "upath": "^2.0.1",
    "yaml": "^2.4.0"
  }
}
